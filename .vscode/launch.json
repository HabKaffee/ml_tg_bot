    "version": "0.2.0",
    "configurations": [

        {
            "name": "ImageProcessor Example",
            "type": "debugpy",
            "request": "launch",
            "program": "src/image_processing/example.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
